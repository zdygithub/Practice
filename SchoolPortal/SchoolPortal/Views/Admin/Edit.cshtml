@model Information
@{
    ViewBag.Title = "Edit";
}

<div class="container">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <h2>编辑新闻</h2>
        <div>
            <form action="@Url.Action("EditSave", "Admin")" method="post">
                <input type="hidden" value="@Model.Id" name="Id" />
                <div class="form-group">
                    <label>标题</label>
                    <input type="text" name="Subject" class="form-control" value="@Model.Subject" />
                </div>
                <div class="form-group">
                    <label>内容</label>
                    <textarea name="Body" class="form-control" rows="15">@Model.Body</textarea>
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">保存</button>

                    <button type="reset" class="btn btn-primary btn-lg" style="margin-left:20px">取消</button>
                </div>
            </form>
        </div>  
    </div>
    
</div>


