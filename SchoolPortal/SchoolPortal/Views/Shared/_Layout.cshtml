<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 我的 ASP.NET 应用程序</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/school.css" rel="stylesheet" />
</head>
<body>
    <div class="header">
        <div class="container">
            <div class="row">

                <div class="col-md-2">
                    <div class="logo_img">
                        <a href="#">
                            <img src="~/Content/img/logo3.jpg" />
                        </a>
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="nav_1 dropdown">
                        <ul class="nav nav-pills">
                            <li>@Html.ActionLink("主页", "Index", "Home")</li>
                            <li>@Html.ActionLink("学校简介", "About", "Home")</li>
                            <li>@Html.ActionLink("教学工作", "Contact", "Home")</li>
                            <li>@Html.ActionLink("学院新闻", "Contact", "Home")</li>
                            <li>@Html.ActionLink("学生园地", "Contact", "Home")</li>
                            <li role="presentation" class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">学生园地 <span class="tb caret "></span></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>                                    
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-3">
                    <form>
                        <div class="form-group">
                            <div class="search ">
                                <div class="col-md-10">
                                    <input type="text" name="q" class="form-control" placeholder="搜索" />
                                </div>                                
                                <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
                            </div>                            
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>


    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("应用程序名称", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    <li>@Html.ActionLink("关于", "About", "Home")</li>
                    <li>@Html.ActionLink("联系方式", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
